{
  "name": "chip8",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:wasm": "em++ ./wasm/chip8.cpp -O3 -s WASM=1 -s EXPORTED_FUNCTIONS='[\"_init_chip8\",\"_updateScreen\",\"_getScreen\",\"_getScreenWidth\",\"_getScreenHeight\"]' -s EXPORTED_RUNTIME_METHODS='[\"ccall\",\"cwrap\"]' -o ./public/chip8.js"
  },
  "devDependencies": {
    "@types/stats.js": "^0.17.3",
    "typescript": "~5.7.2",
    "vite": "^6.2.0"
  },
  "dependencies": {
    "stats.js": "^0.17.0"
  }
}
